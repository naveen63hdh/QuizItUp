<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/smoke_white"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        tools:context=".QuizDetailsActivity">

        <EditText
            android:id="@+id/quizNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/editext_background"
            android:hint="Quiz Name"
            android:padding="15dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/editext_background"
                android:ems="10"
                android:enabled="false"
                android:inputType="date"
                android:hint="DD/MM/YYYY"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <ImageButton
                android:id="@+id/date_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:background="@color/smoke_white"
                android:src="@drawable/ic_calendar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time :"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/start_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/editext_background"
                android:ems="8"
                android:enabled="false"
                android:hint="HH:MM AM"
                android:inputType="time"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <ImageButton
                android:id="@+id/start_time_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:background="@color/smoke_white"
                android:src="@drawable/ic_clock"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Time :  "
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/end_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/editext_background"
                android:ems="8"
                android:enabled="false"
                android:inputType="time"
                android:hint="HH:MM AM"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <ImageButton
                android:id="@+id/end_time_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:background="@color/smoke_white"
                android:src="@drawable/ic_clock" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="End \nJoining Time :"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/end_joining_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/editext_background"
                android:ems="8"
                android:enabled="false"
                android:inputType="time"
                android:hint="HH:MM AM"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <ImageButton
                android:id="@+id/end_joining_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:background="@color/smoke_white"
                android:src="@drawable/ic_clock" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Show Answers \nAfter Submission :"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Off"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/ans_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:theme="@style/ThemeOverlay.MySwitchCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="On"
                android:textColor="@color/black" />

        </LinearLayout>

